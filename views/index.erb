      <textarea style="margin-left:60px;background:transparent;border:none;font-family: 'Reenie Beanie', arial, serif;font-size: 40px;width: 25px;height:250px;" id="deque" type="text" READONLY></textarea>
      <input style="color:blue;float:right;font-family: 'Philosopher', arial, serif;font-size: 30px;width: 300px;height:60px;background:transparent;border:none;" id="output" type="text" READONLY>
      <br/>
      <input style="margin-left:58px;font-family: 'Reenie Beanie', arial, serif;font-size: 25px;width: 20px;height:20px;" id="bottom-input" type="text">
      <br/>
      <a id="push-bottom" style="font-size:12px;" href="#" data-icon="↑" class="button green shield" onclick="push('bottom');">Push</a>
  		<a id="pop-bottom" style="font-size:12px;" href="#" data-icon="↓" class="button pink shield" onclick="pop('bottom');">Pop</a>
      <h2 style="float:right;font-family: 'Philosopher', serif;font-size:30px;font-style:italic;text-shadow: 2px 2px 2px #aaa;" id="label"></h2>
    </div>
